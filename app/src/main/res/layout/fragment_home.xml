                            android:text="Create Task"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_small15" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_left_rounded"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_complete_task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom_left_rounded"
                            android:drawableTop="@mipmap/ic_ok"
                            android:drawablePadding="@dimen/space_tinny4"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/space_mid10"
                            android:text="Pending Task"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_small15" />

                        <TextView
                            android:id="@+id/pending_task_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/tv_complete_task"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_small15" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/tv_web_view_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/top_left_right_rounded"
                    android:gravity="center"
                    android:padding="@dimen/space_mid6"
                    android:text="WebView"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_web_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_left_rounded"
                        android:drawableTop="@drawable/web"
                        android:drawablePadding="@dimen/space_tinny4"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/space_mid10"
                        android:text="Reports"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_small15" />


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>

