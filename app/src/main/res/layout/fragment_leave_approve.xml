<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_left_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".activity.LoginActivity">


    <LinearLayout
        android:id="@+id/list_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="35dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_direct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/all_corners_rounded_disabled"
            android:drawablePadding="@dimen/space_tinny4"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_tinny4"
            android:text="Direct"
            android:textColor="@color/white"
            android:textSize="@dimen/size_mid16" />


        <TextView
            android:id="@+id/bt_inline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/all_corners_rounded"
            android:drawablePadding="@dimen/space_tinny4"
            android:gravity="center_horizontal"
            android:onClick="selfDestruct"
            android:padding="@dimen/space_tinny4"
            android:text="Indirect"
            android:textColor="@color/white"
            android:textSize="@dimen/size_mid16" />


    </LinearLayout>

</RelativeLayout>