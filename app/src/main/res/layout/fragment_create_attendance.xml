<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/all_corners_rounded_white"
                android:drawableTop="@drawable/in"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:text="In Attendance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_mid16" />


            <TextView
                android:id="@+id/out_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_corners_rounded_white"
                android:drawableTop="@drawable/out"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:text="Out Attendance"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/size_mid16" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/marked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_intime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_corners_rounded"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:textColor="@color/white"
                android:textSize="17sp" />


            <View
                android:layout_width="@dimen/space_tinny4"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_outtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/all_corners_rounded"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/synced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_intime_sync_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:textColor="@color/white"
                android:textSize="@dimen/size_mid16" />


            <View
                android:layout_width="@dimen/space_tinny4"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_outtime_sync_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="@dimen/space_tinny4"
                android:gravity="center_horizontal"
                android:padding="@dimen/space_tinny4"
                android:textColor="@color/white"
                android:textSize="@dimen/size_mid16" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>