<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    tools:context=".activity.LoginActivity">


    <TextView
        android:id="@+id/LeaveBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/top_left_right_rounded"
        android:gravity="center"
        android:padding="@dimen/space_mid6"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:baselineAligned="false"
        android:paddingTop="40dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/space_tinny4"
            android:layout_weight="1"
            android:textColorHint="@color/colorPrimary">

            <EditText
                android:id="@+id/login_id"
                style="@style/under_line_et"
                android:drawableRight="@drawable/ic_mendotry"
                android:hint="Login Id"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobno1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="false"
        android:baselineAligned="false"
        android:paddingTop="0dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_mid10"
            android:layout_marginRight="@dimen/space_tinny4"
            android:layout_weight="1"
            android:textColorHint="@color/colorPrimary">

            <EditText
                android:id="@+id/mobno"
                style="@style/under_line_et"
                android:drawableRight="@drawable/ic_mendotry"
                android:hint="Mobile No."
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dob1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobno1"
        android:layout_alignParentStart="false"
        android:baselineAligned="false"
        android:paddingTop="0dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_mid10"
            android:layout_marginRight="@dimen/space_tinny4"
            android:layout_weight="1"
            android:textColorHint="@color/colorPrimary">

            <EditText
                android:id="@+id/dob"
                style="@style/under_line_et"
                android:drawableRight="@drawable/ic_mendotry"
                android:hint="DOB"
                android:padding="12dp"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/bt_datepick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:onClick="setDate"
            android:src="@mipmap/ic_date" />

    </LinearLayout>

    <ImageView
        android:id="@+id/resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_unlock" />

</RelativeLayout>
